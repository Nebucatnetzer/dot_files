## GNOME PolicyKit and Keyring
eval $(gnome-keyring-daemon -s --components=pkcs11,secrets,ssh,gpg) &
exec /usr/lib/polkit-1-gnome/polkit-gnome-authentication-agent-1 &

## Starting network manager applet
nm-applet &

## Set root window colour
hsetroot -solid "#2E3436" &

## start rofi with alt-tab for switching windows
rofi -key-window alt-Tab &

## start rofi with mod+d for running starting applications
rofi -key-run mod4+d &

## enable the compositor
xcompmgr &

## restore the wallpaper
nitrogen --restore &
sleep 2s &

## Start Thunar Daemon
thunar --daemon &

## Set keyboard settings - 250 ms delay and 25 cps (characters per second) repeat rate.
## Adjust the values according to your preferances.
xset r rate 250 25 &

## enabling numlock
numlockx on &

## starting clipit for better copy & paste
clipit &

## start xflux to minimise eye strain
redshift -l 47.188247:7.703133 &

## Turn on/off system beep
xset b off &

## Starting the owncloud deamon
sleep 10s && owncloud &
